<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:paddingTop="50px"
        android:paddingLeft="50px"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="70px"
            android:layout_height="60px"
            android:id="@+id/imageView00"
            android:background="@drawable/icon_arrow_left"/>

        <TextView
            android:text="Settings"
            android:textSize="60px"
            android:gravity="center"
            android:paddingBottom="30px"
            android:layout_width="850px"
            android:id="@+id/textTitleSettings"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView0"
        android:background="@drawable/divider"/>


    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        android:layout_gravity="center_horizontal">

        <TextView
            android:text="Profile"
            android:textSize="50px"
            android:id="@+id/txtProfile"
            android:layout_width="250px"
            android:layout_height="100px"
            android:background="@drawable/back"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <TextView
            android:text="Categories"
            android:textSize="50px"
            android:id="@+id/txtCategories"
            android:layout_width="300px"
            android:layout_height="100px"
            android:background="@drawable/back"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <TextView
            android:text="General"
            android:textSize="50px"
            android:id="@+id/txtGeneral"
            android:layout_width="250px"
            android:layout_height="100px"
            android:background="@drawable/back"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linear1lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100px"
        android:visibility="gone">

        <TextView
            android:textSize="50px"
            android:id="@+id/textViewNeeds"
            android:layout_width="650px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Omnify will show you offers that fit your needs."
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <LinearLayout
            android:id="@+id/linear1lay2"
            android:paddingTop="100px"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:textSize="80px"
                android:textStyle="bold"
                android:id="@+id/textGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Select your gender"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:textSize="40px"
                android:text="optional"
                android:id="@+id/textOptional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <LinearLayout
                android:paddingTop="30px"
                android:id="@+id/linearlay0"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/femaleSelector">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="200px"
                        android:layout_height="400px"
                        android:background="@drawable/female_deselect"/>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imageView2"
                        android:layout_width="200px"
                        android:layout_height="400px"
                        android:background="@drawable/female_select"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/maleSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200px">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="150px"
                        android:layout_height="400px"
                        android:background="@drawable/man_deselect"/>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imageView4"
                        android:layout_width="150px"
                        android:layout_height="400px"
                        android:background="@drawable/male_select"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1lay3"
            android:paddingTop="100px"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textSize="80px"
                android:textStyle="bold"
                android:text="Year of birth"
                android:id="@+id/textYearBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:textSize="50px"
                android:text="optional"
                android:id="@+id/textOptional2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:hint="- - - -"
                android:gravity="center"
                android:textSize="80px"
                android:inputType="number"
                android:id="@+id/editText2"
                android:maxLength="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/linear2lay1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear2lay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80px"
            android:layout_gravity="center">

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:id="@+id/image1Category"
                    android:background="@drawable/categories_1_on"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:id="@+id/image11Category"
                    android:background="@drawable/categories_1"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="60px"
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:id="@+id/image2Category"
                    android:background="@drawable/categories_2_on"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_marginLeft="60px"
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:id="@+id/image21Category"
                    android:background="@drawable/categories_2"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2lay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80px"
            android:layout_gravity="center">

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:id="@+id/image3Category"
                    android:background="@drawable/categories_3_on"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:id="@+id/image31Category"
                    android:background="@drawable/categories_3"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="60px"
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:id="@+id/image4Category"
                    android:background="@drawable/categories_4_on"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_marginLeft="60px"
                    android:layout_width="260px"
                    android:layout_height="260px"
                    android:id="@+id/image41Category"
                    android:background="@drawable/categories_4"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2lay4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80px"
            android:layout_gravity="center">

            <FrameLayout
                android:id="@+id/frameLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:id="@+id/image5Category"
                    android:background="@drawable/categories_5_on"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:id="@+id/image51Category"
                    android:background="@drawable/categories_5"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="60px"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:id="@+id/image6Category"
                    android:background="@drawable/categories_6_on"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_marginLeft="60px"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:id="@+id/image61Category"
                    android:background="@drawable/categories_6"/>
            </FrameLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear2lay5"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textSize="50px"
                android:text="SELECT ALL"
                android:layout_marginLeft="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textSelectAll"/>

            <TextView
                android:textSize="50px"
                android:layout_marginLeft="60px"
                android:id="@+id/textDotDisturb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DO NOT DISTURB"
                android:layout_gravity="right" />

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linear3lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/linear3lay2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="70px"
            android:paddingLeft="70px"
            android:paddingRight="70px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sign Up"
                android:textSize="70px"
                android:id="@+id/txtSignUp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="optional"
                android:textSize="40px"
                android:id="@+id/txtOptional"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:textSize="50px"
                android:id="@+id/textView3" />

            <EditText
                android:textSize="50px"
                android:id="@+id/txtName"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Surname"
                android:id="@+id/textView4"
                android:visibility="gone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSurname"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email"
                android:textSize="50px"
                android:id="@+id/textView5" />

            <EditText
                android:ems="10"
                android:textSize="50px"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/txtEmail" />

            <!--<com.facebook.login.widget.LoginButton-->
                <!--android:id="@+id/btnFBlogin"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--android:layout_weight="0.14"/>-->

        </LinearLayout>

        <LinearLayout
        android:id="@+id/linear3lay3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="300px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="50px"
                android:text="Privacy Policy"
                android:id="@+id/textPrivacyPolicy"/>

            <ImageView
                android:id="@+id/omnifyLogo"
                android:layout_width="650px"
                android:layout_height="250px"
                android:src="@drawable/omnify_logo_pink"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>